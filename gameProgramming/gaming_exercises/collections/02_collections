doorKeys = [
    "red",
    "green",
    "yellow",
    "purple",
    "brown"
]

key = input("Which color key do you need to unlock the door?\n")

if key in doorKeys:
    print("you have the key!. The door is now unlocked.\n")
else:
    print("You do not have that key. The door remains locked.\n")

    