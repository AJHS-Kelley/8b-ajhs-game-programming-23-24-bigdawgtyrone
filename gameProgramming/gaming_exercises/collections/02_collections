weaponList = [
    True, #handgun
    False, #stungun
    False, #pulse rifle
    False, #energy sword
    True #tactical shotgun
]

weaponNum = 0
while weaponNum < len(weaponList):
    if weaponNum == 0 and weaponList[0] == True:
        print("here is your common handgun.\n")
    if weaponNum == 1 and weaponList[1] == False:
        print("you don't have that.\n")
    if weaponNum == 2 and weaponList[2] == False:
        print("You don't have that.\n")
    if weaponNum == 3 and weaponList[3] == False:
        print("You don't have that.\n")
    if weaponNum == 4 and weaponList[4] == True:
        print("here is your tactical shotgun.\n")
    weaponNum += 1

